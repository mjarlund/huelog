# Hue Bridge Configuration
# Replace with your actual Hue bridge IP address
HUE_BRIDGE_IP=your-bridge-ip-here

# Hue Application Key (will be generated during first run if not set)
HUE_APP_KEY=

# TLS Verification (set to true for production)
HUE_VERIFY_TLS=false

# Database Configuration
DB_PATH=/app/data/hue_events.sqlite

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
FLASK_DEBUG=false
